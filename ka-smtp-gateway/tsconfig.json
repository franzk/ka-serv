{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ES2022"],
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"outDir": "dist"
	},
	"include": ["index.ts"],
	"exclude": ["node_modules"]
}
